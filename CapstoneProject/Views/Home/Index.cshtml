@model IEnumerable<CapstoneProject.Models.Movies>

@{
    ViewData["Title"] = "Home Page";
}

<head>
    <link rel="stylesheet" href="css/site.css">
</head>

<body>

    <section class="search">
        <div class="container">
            <div class="card border-0 shadow-lg search-card">
                <div class="card-body">
                    @*<h1 class="display-9 font-weight-bold mb-2">Find Your Movie</h1>*@
                    <div class="row justify-content-center align-items-center">
                        <div class="col-md-4 mb-3 mb-md-0">
                            <div class="form-group">
                                <select class="form-control form-control-lg fancy-select" id="categorySelect">
                                    <option value="all">All Categories</option>
                                    <option value="action">Action</option>
                                    <option value="comedy">Comedy</option>
                                    <option value="drama">Drama</option>
                                    <option value="fantasy">Fantasy</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3 mb-md-0">
                            <div class="form-outline form-white">
                                <input type="text" id="sec1" class="form-control form-control-lg fancy-input" placeholder="Search for movies...">
                                <i class="fas fa-search search-icon"></i>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <a asp-area="" asp-controller="Movie" asp-action="Index" class="btn btn-primary btn-lg btn-block fancy-button">Search</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section>
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="simple-slider">
                        <div class="swiper-container">
                            <div class="swiper-button-next"></div>
                        </div>
                    </div>
                    <div class="carousel slide" data-bs-ride="carousel" id="carousel-1">
                        <div class="carousel-inner">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img class="w-100 d-block" data-aos="fade" data-aos-delay="100" id="randomMovieImage1" alt="Slide Image" style="width: 500px; height: 700px;">
                                </div>
                                <div class="carousel-item">
                                    <img class="w-100 d-block" data-aos="fade" data-aos-delay="100" id="randomMovieImage2" alt="Slide Image2" style="width: 500px; height: 700px;">
                                </div>
                                <div class="carousel-item">
                                    <img class="w-100 d-block" data-aos="fade" data-aos-delay="100" id="randomMovieImage3" alt="Slide Image3" style="width: 500px; height: 700px;">
                                </div>
                            </div>
                        </div>
                        <div><a class="carousel-control-prev" href="#carousel-1" role="button" data-bs-slide="prev"><span class="carousel-control-prev-icon"></span><span class="visually-hidden">Previous</span></a><a class="carousel-control-next" href="#carousel-1" role="button" data-bs-slide="next"><span class="carousel-control-next-icon"></span><span class="visually-hidden">Next</span></a></div>
                        <div class="carousel-indicators"><button type="button" data-bs-target="#carousel-1" data-bs-slide-to="0" class="active"></button> <button type="button" data-bs-target="#carousel-1" data-bs-slide-to="1"></button> <button type="button" data-bs-target="#carousel-1" data-bs-slide-to="2"></button></div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="list-group fancy-scrollarea" id="movieScroll">
                        @foreach (var movie in Model.Take(10).OrderBy(m => m.ReleaseDate))
                        {
                            <div class="card mb-4">
                                <div class="row no-gutters">
                                    <div class="col-md-3">
                                        <img src="@movie.PosterImageUrl" class="card-img" alt="Movie Poster">
                                    </div>
                                    <div class="col-md-9">
                                        <div class="card-body">
                                            <h4 class="card-title">@movie.Title</h4>
                                            <p class="card-text">@movie.Description</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer text-muted">
                                    Release Date: @movie.ReleaseDate
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section>
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 order-lg-2">
                    <div class="p-5"><img class="rounded-circle img-fluid" src="image/01.jpg"></div>
                </div>
                <div class="col-lg-6 order-lg-1">
                    <div class="p-5">
                        <h2 class="display-4">Explore the World of Cinema</h2>
                        <p>Discover the magic of movies and dive into a world of captivating stories and unforgettable moments. Immerse yourself in the art of filmmaking and explore the rich tapestry of cinematic experiences.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section>
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 order-lg-1">
                    <div class="p-5"><img class="rounded-circle img-fluid" src="image/02.jpg"></div>
                </div>
                <div class="col-lg-6 order-lg-2">
                    <div class="p-5">
                        <h2 class="display-4">Lights, Camera, Action!</h2>
                        <p>Step into the spotlight and be part of the cinematic journey. From thrilling adventures to heartfelt dramas, movies bring the stories to life. Get ready to experience the excitement of the silver screen.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section>
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 order-lg-2">
                    <div class="p-5"><img class="rounded-circle img-fluid" src="image/03.jpg"></div>
                </div>
                <div class="col-lg-6 order-lg-1">
                    <div class="p-5">
                        <h2 class="display-4">Where Dreams Come to Life</h2>
                        <p>Experience the magic of the big screen. Let your imagination soar and lose yourself in the enchanting world of cinema. Join us as we celebrate the power of storytelling through film.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>


</body>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>$(document).ready(function () {
        // Function to update a random movie image
        function updateRandomMovieImage(imageId, callback) {
            $.get('/api/random', function (data) {
                $(imageId).attr('src', data);
                if (typeof callback === 'function') {
                    callback();
                }
            });
        }
        // Call the function for each random movie image sequentially
        updateRandomMovieImage('#randomMovieImage1', function () {
            updateRandomMovieImage('#randomMovieImage2', function () {
                updateRandomMovieImage('#randomMovieImage3');
            });
        });
    });</script>