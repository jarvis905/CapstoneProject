@model CapstoneProject.Models.MoviesViewModel

<!doctype html>
<html lang="en">
<head>
    <title>@ViewData["Title"] = "Movies";</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <style>
        /* Custom CSS to set the background color and text color */
        .bg-dark-text-white {
            background-color: black;
            color: white;
        }
    </style>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</head>

<body>
    <section class="text-center container">
        <div class="row">
            <div class="col-lg-6 col-md-8 mx-auto">
                <h1 class="fw-light">Movies</h1>
                <p class="lead text-body-secondary">Search for Movies and the results will be displayed</p>
            </div>
        </div>
    </section>

    <!-- Search Bar and Filters Section -->
    <div class="container mt-3 text-center">
        <div class="row justify-content-center align-items-center">
            <div class="col-md-4">
                @using (Html.BeginForm("FilterMovies", "Movie", FormMethod.Get, new {id = "searchForm"}))
                {
                    <div class="input-group mb-3">
                        <input type="text" name="searchString" id="searchString" class="form-control" placeholder="Search for movies...">
                        <button class="btn btn-primary" type="submit">Search</button>
                    </div>
                }

            </div>
            <div class="col-md-8">
                <div class="filter-row d-flex mb-3">
                    <!-- Horizontal Filters: Date, Theater, Genre -->
                    <div class="filter me-3">
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="dateDropdownButton" data-bs-toggle="dropdown" aria-expanded="false">
                                Date
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dateDropdownButton">
                                <li>
                                    <a class="dropdown-item" href="#">All Dates</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#">2023-10-20</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#">2022-10-21</a>
                                </li>
                                <!-- Add more date options here in YYYY-MM-DD format -->
                            </ul>
                        </div>
                    </div>
                    <div class="filter me-3">
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="theatreDropdownButton" data-bs-toggle="dropdown" aria-expanded="false">
                                Theatre
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="theatreDropdownButton">
                                <li>
                                    <a class="dropdown-item" href="#">All Theatres</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#">Theatre 1</a>
                                </li>
                                <!-- Add more theatre options here -->
                            </ul>
                        </div>
                    </div>
                    <div class="filter me-3">
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="genreDropdownButton" data-bs-toggle="dropdown" aria-expanded="false">
                                Genre
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="genreDropdownButton">
                                <li>
                                    <a class="dropdown-item" href="#">All Genres</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#">Action</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#">Comedy</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#">Romance</a>
                                </li>
                                <!-- Add more genre options here -->
                            </ul>
                        </div>
                    </div>

                </div>
                <div class="filter-row d-flex">
                    <!-- Horizontal Filters: Language, Country, New In Theaters -->
                    <div class="filter me-3">
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="languageDropdownButton" data-bs-toggle="dropdown" aria-expanded="false">
                                Language
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="languageDropdownButton">
                                <li>
                                    <a class="dropdown-item" href="#">All Languages</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#">English</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#">French</a>
                                </li>
                                <!-- Add more language options here -->
                            </ul>
                        </div>
                    </div>
                    <div class="filter me-3">
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="countryDropdownButton" data-bs-toggle="dropdown" aria-expanded="false">
                                Country
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="countryDropdownButton">
                                <li>
                                    <a class="dropdown-item" href="#">All Countries</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#">USA</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#">Canada</a>
                                </li>
                                <!-- Add more country options here -->
                            </ul>
                        </div>
                    </div>
                    <div class="filter me-3">
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="newInTheatersDropdownButton" data-bs-toggle="dropdown" aria-expanded="false">
                                New In Theaters
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="newInTheatersDropdownButton">
                                <li>
                                    <a class="dropdown-item" href="#">All Status</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#">Now Showing</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#">Coming Soon</a>
                                </li>
                                <!-- Add more status options here -->
                            </ul>
                        </div>
                    </div>
                    <div class="filter me-3">
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="releasedYearDropdownButton" data-bs-toggle="dropdown" aria-expanded="false">
                                Released Year
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="releasedYearDropdownButton">
                                <li>
                                    <a class="dropdown-item" href="#">All Years</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#">2023</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#">2022</a>
                                </li>
                                <!-- Add more release year options here -->
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
  


    




    <!--display movie list option 2-->
    <div class="album py-5 bg-body-tertiary">
        <div class="container">

            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                
                <!-- loop -->
                @if (Model.LocalMovies.Any())
                {
                    @foreach (var movie in Model.LocalMovies.OrderByDescending(m => m.ReleaseDate))
                    {
                        <div class="col">
                            <div class="card shadow-sm">
                                <img src="@movie.PosterImageUrl" class="bd-placeholder-img card-img-top" alt="@movie.Title" width="100%" height="500">
                                <div class="card-body">
                                    <p class="card-text">@movie.Title</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-sm btn-outline-secondary">Trailer</button>
                                            <a asp-controller="Movie" asp-action="SingleMovie" asp-route-id="@movie.Id">
                                                <button type="button" class="btn btn-sm btn-outline-secondary" >Details</button>
                                            </a>
                                        </div>
                                        <small class="text-body-secondary">Ticket Available</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p>No Movies Found!</p>
                }

        </div>
    </div>

</body>
</html>
